<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.konig</groupId>
  <artifactId>konig-parent</artifactId>
  <version>1.0.1-SNAPSHOT</version>
  <name>Konig Parent</name>
  <description>The parent project from which all the konig modules are built</description>
  <packaging>pom</packaging>
  <properties>
  	<konig.version>1.0.0-SNAPSHOT</konig.version>
  	<license.licenseName>apache_v2</license.licenseName>
  	<license.inceptionYear>2015</license.inceptionYear>
  	<license.organizationName>Gregory McFall</license.organizationName>
    <license.excludes>src/test/resources/jsonld/owlshapes.json</license.excludes>
  	<sesame.version>2.8.7</sesame.version>
  	<junit.version>4.12</junit.version>
  	<slf4j.version>1.7.10</slf4j.version>
  	<jackson.version>2.6.3</jackson.version>
  	<jsonld-java.version>0.7.0</jsonld-java.version>
  </properties>
  
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <scm>
    <url>scm:git:ssh://git@github.com/konigio/konig.git</url>
    <connection>scm:git:ssh://git@github.com/konigio/konig.git</connection>  	
    <developerConnection>scm:git:ssh://git@github.com/konigio/konig.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  
  <developers>
    <developer>
      <id>gmcfall</id>
      <name>Greg McFall</name>
      <email>gregory.mcfall@gmail.com</email>
    </developer>
  </developers>
  
  <distributionManagement>
    <repository>
      <id>sonatype-nexus-snapshots</id>
      <name>Nexus Snapshots Repository</name>
      <url>http://oss.sonatype.org/service/local/staging/deploy/maven2</url>
    </repository>
  </distributionManagement>
  
  <modules>
  	<module>../konig-core</module>
  	<module>../konig-filebase</module>
  	<module>../konig-shacl</module>
  	<module>../konig-schemagen</module>
  	<module>../konig-schemagen-maven-plugin</module>
  	<module>../konig-services</module>
  	<module>../konig-webapp</module>
  	<module>../konig-war</module>
  </modules>
  
  <build>
      
    <plugins>
    	<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <configuration>
        	<pushChanges>false</pushChanges>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      
    </plugins>
  </build>
   <profiles>
  	<profile>
  		<id>release-profile</id>
  		<activation>
  			<property>
  				<name>performRelease</name>
  				<value>true</value>
  			</property>
  		</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
  	</profile>
  	
  </profiles>
</project>